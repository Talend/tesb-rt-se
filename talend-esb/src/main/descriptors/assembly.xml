        <!-- workaround for pax-url-classpath bundle (TESB-6904) -->
        <file>
            <source>${basedir}/target/dependencies/pax-url-classpath-${pax-url-classpath.version}.jar</source>
            <outputDirectory>./container/system/org/ops4j/pax/url/pax-url-classpath/${pax-url-classpath.version}/</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
        <!-- Workaround for Karaf features descriptor -->
        <file>
            <source>${basedir}/target/dependencies/framework-${karaf.version}-features.xml</source>
            <outputDirectory>./container/system/org/apache/karaf/features/framework/${karaf.version}/</outputDirectory>
            <destName>framework-${karaf.version}-features.xml</destName>
            <fileMode>0644</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>${basedir}/target/dependencies/standard-${karaf.version}-features.xml</source>
            <outputDirectory>./container/system/org/apache/karaf/features/standard/${karaf.version}/</outputDirectory>
            <destName>standard-${karaf.version}-features.xml</destName>
            <fileMode>0644</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>${basedir}/target/dependencies/pax-web-features-${pax-web.version}-features.xml</source>
            <outputDirectory>./container/system/org/ops4j/pax/web/pax-web-features/${pax-web.version}/</outputDirectory>
