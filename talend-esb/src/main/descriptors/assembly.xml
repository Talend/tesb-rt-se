            <destName>apache-karaf-decanter-${decanter.version}-features.xml</destName>
            <fileMode>0644</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <!-- workaround for ActiveMQ features descriptor -->
        <file>
            <source>${basedir}/target/dependencies/activemq-karaf-${activemq.version}-features-core.xml</source>
